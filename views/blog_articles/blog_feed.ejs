    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('blogSearchInput');
            const rows = document.querySelectorAll('.blog-row');

            // è¼¸å…¥æœå°‹ (å³æ™‚ç¯©é¸)
            searchInput.addEventListener('input', () => {
                filterArticles();
            });

            // æ ¸å¿ƒç¯©é¸é‚è¼¯ (åªæª¢æŸ¥ City èˆ‡ Season)
            function filterArticles() {
                const searchValue = searchInput.value.toLowerCase().trim();

                rows.forEach(row => {
                    const city = row.getAttribute('data-city');
                    const season = row.getAttribute('data-season');
                    
                    if (searchValue === '') {
                        row.classList.remove('hidden');
                        return;
                    }

                    // æª¢æŸ¥ åœ°é» æˆ– å­£ç¯€ æ˜¯å¦åŒ…å«é—œéµå­—
                    const matchCity = city.includes(searchValue);
                    const matchSeason = season.includes(searchValue);

                    if (matchCity || matchSeason) {
                        row.classList.remove('hidden');
                    } else {
                        row.classList.add('hidden');
                    }
                });
            }
        });
