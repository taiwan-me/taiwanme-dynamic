    <style>
        /* --- Hidden Gems 專屬樣式 --- */
        
        /* 1. 頂部大 Banner */
        .hg-banner {
            width: 100%;
            height: 60vh; /* 佔據螢幕高度的 60% */
            min-height: 400px;
            background-image: url('/image/hiddengems/banner.png'); /* 您的圖片路徑 */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            margin-bottom: 50px;
            position: relative;
        }

        /* 2. Hero 標題區塊 (模仿提供的圖片風格) */
        .hg-hero-section {
            text-align: center;
            padding: 0 20px 60px;
            max-width: 1000px;
            margin: 0 auto;
        }

        /* 標題的底色方塊 */
        .hg-title-box {
            background-color: var(--lace-bg);
            /* 使用導覽列的米色 */
            border: 1px solid var(--lace-border);
            /* 加上細邊框增加精緻感 */
            padding: 40px 20px;
            margin-bottom: 30px;
            border-radius: 4px; /* 稍微圓角 */
            display: inline-block;
            /* 讓方塊隨著內容寬度調整，或設 width:100% */
            width: 100%;
        }

        .hg-main-title {
            font-family: 'Lato', sans-serif;
            font-size: 2.5rem;
            font-weight: 900;
            color: #333;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin: 0;
            line-height: 1.2;
        }

        .hg-slogan {
            font-family: 'Noto Serif TC', serif;
            color: #555;
            font-size: 1.2rem;
            font-style: italic;
            margin: 0;
            margin-top: 15px;
            line-height: 1.6;
        }
        
        .hg-slogan span {
            display: block;
            font-size: 1rem;
            color: #777;
            margin-top: 5px;
            font-style: normal;
        }

        .hg-intro-text {
            max-width: 800px;
            margin: 40px auto 0;
            line-height: 2;
            color: #555;
            font-size: 1.05rem;
            text-align: justify;
        }

        /* 3. 區域區塊 */
        .hg-region-section {
            padding: 60px 20px;
            /* 為了讓錨點定位準確，加上 scroll-margin */
            scroll-margin-top: 100px;
        }

        .hg-region-header {
            text-align: center;
            margin-bottom: 50px;
        }

        /* 區域標題的底色方塊 */
        .hg-region-title-box {
            background-color: var(--lace-bg);
            /* 與主標題一樣的底色 */
            padding: 15px 40px;
            display: inline-block;
            /* 讓方塊包覆文字即可，不要滿版 */
            border-radius: 30px;
            /* 區域標題用圓潤一點的造型 */
            margin-bottom: 20px;
            border: 1px solid transparent;
            /* 預留邊框位置 */
        }

        .hg-region-title {
            font-family: 'Lato', sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: #333; /* 深灰色文字 */
            margin: 0;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .hg-region-desc {
            max-width: 600px;
            margin: 0 auto;
            color: #666; /* 敘述文字顏色 */
            font-size: 1rem;
            line-height: 1.8;
            /* 確保這裡沒有底色 */
            background: transparent;
        }

        /* 4. 輪播卡片樣式 */
        .swiper {
            width: 100%;
            padding-bottom: 50px; /* 留給分頁點 */
        }
        .hg-card {
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s;
            height: 100%;
            /* 等高 */
            display: flex;
            flex-direction: column;
            text-decoration: none;
            /* 移除連結底線 */
            color: inherit;
        }
        .hg-card:hover { transform: translateY(-5px);
        }
        
        .hg-img-box {
            width: 100%;
            height: 250px;
            overflow: hidden;
            position: relative;
        }
        .hg-img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }
        .hg-card:hover .hg-img-box img { transform: scale(1.1);
        }

        .hg-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        /* 標籤樣式 */
        .tags-row {
            display: flex;
            gap: 8px;
            margin-bottom: 12px;
            flex-wrap: wrap;
        }
        .tag {
            font-size: 0.75rem;
            padding: 4px 10px;
            border-radius: 20px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .tag.city {
            background-color: #f0f0f0;
            color: #555;
            border: 1px solid #ddd;
        }
        .tag.gem {
            background-color: var(--accent-color);
            /* 你的粉色主題色 */
            color: #fff;
        }

        .hg-title {
            font-size: 1.2rem;
            font-weight: 700;
            margin: 0 0 10px;
            color: #333;
            line-height: 1.4;
        }
        
        /* View All 按鈕 */
        .view-all-container {
            text-align: center;
            margin-top: 30px;
        }
        .btn-view-all {
            display: inline-block;
            border: 1px solid #333;
            color: #333;
            padding: 10px 30px;
            text-decoration: none;
            font-family: 'Lato', sans-serif;
            text-transform: uppercase;
            font-weight: bold;
            transition: 0.3s;
        }
        .btn-view-all:hover {
            background-color: #333;
            color: #fff;
        }

        /* 手機版調整 */
        @media (max-width: 768px) {
            .hg-banner { height: 40vh;
            }
            .hg-main-title { font-size: 1.8rem;
            }
            .hg-title-box { padding: 30px 15px;
            }
            .hg-img-box { height: 200px;
            }
        }
    </style>
</head>
